<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ActivitySecond">

    <EditText
        android:id="@+id/EditTextTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint1"
        android:layout_margin="@dimen/margin10"
        android:inputType="text" />

    <EditText
        android:id="@+id/EditTextTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="@string/hint2"
        android:layout_margin="@dimen/margin10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditTextTypePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint3"
        android:layout_margin="@dimen/margin10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/EditTextTypePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint4"
        android:layout_margin="@dimen/margin10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/EditTextTypeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="@string/hint5"
        android:layout_margin="@dimen/margin10"
        android:inputType="number" />

    <EditText
        android:id="@+id/EditTextTypeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint6"
        android:layout_margin="@dimen/margin10"
        android:inputType="textEmailAddress" />
</LinearLayout>